    <script>
        // ‚úÖ Define API_BASE globally
        const API_BASE = window.location.origin || 'http://localhost:8840';
        
        async function loadDashboard() {
            const owner = document.getElementById('ownerInput').value.toLowerCase().trim();
            const statusDiv = document.getElementById('statusMessage');
            
            if (!owner || !owner.startsWith('0x') || owner.length !== 42) {
                statusDiv.innerHTML = '<div class="status error">‚ùå Please enter a valid wallet address</div>';
                return;
            }
            
            // ‚úÖ Check if user already connected with MetaMask
            if (!dashboardToken || connectedWallet !== owner) {
                statusDiv.innerHTML = '<div class="status error">‚ùå Please connect MetaMask first (ü¶ä Connect MetaMask button)</div>';
                return;
            }
            
            statusDiv.innerHTML = '<div class="status loading"><span class="loading"></span> Loading dashboard...</div>';
            
            try {
                // ‚úÖ No MetaMask needed here - user already verified via connectMetaMask()
                // Just load the dashboard
                console.log('ÔøΩ Loading dashboard with stored token...');
                
                const response = await fetch(`${API_BASE}/admin/followers?owner=${owner}`);
                const data = await response.json();
                
                if (!data.success) {
                    throw new Error(data.error || 'Failed to load dashboard');
                }
                
                displayDashboard(data);
                statusDiv.innerHTML = '<div class="status success">‚úì Dashboard loaded successfully</div>';
                console.log('‚úì Dashboard loaded!');
                
                // ===== BLOCKCHAIN: Load blockchain data =====
                // ‚ö†Ô∏è IMPORTANT: Load blockchain data for CONNECTED WALLET, not owner from input field
                // The input field is for viewing OTHER people's followers
                // But YOUR blockchain stats (NFT, Score) should be shown for YOUR wallet
                try {
                    console.log('[Dashboard] Checking for BlockchainDashboard module...');
                    console.log('[Dashboard] window.BlockchainDashboard =', typeof window.BlockchainDashboard);
                    
                    if (window.BlockchainDashboard) {
                        console.log('üîó [Dashboard] Loading blockchain data for CONNECTED wallet:', connectedWallet);
                        await window.BlockchainDashboard.loadBlockchainData(connectedWallet);
                        console.log('‚úì [Dashboard] Blockchain data loaded!');
                    } else {
                        console.error('‚ùå [Dashboard] BlockchainDashboard module not found!');
                        console.log('[Dashboard] Available window properties:', Object.keys(window).filter(k => k.includes('Blockchain')));
                    }
                } catch (blockchainError) {
                    console.error('‚ùå [Dashboard] Blockchain data load failed:', blockchainError);
                    console.error('[Dashboard] Stack trace:', blockchainError.stack);
                    // Non-critical - dashboard still works without blockchain data
                }
                
            } catch (error) {
                console.error('‚ùå Error:', error);
                statusDiv.innerHTML = `<div class="status error">‚ùå Error: ${error.message}</div>`;
                document.getElementById('dashboardContent').style.display = 'none';
            }
        }
        
        function displayDashboard(data) {
            // Update stats
            document.getElementById('followerCount').textContent = data.total_followers;
            document.getElementById('followerCount2').textContent = `${data.total_followers} verified followers`;
            document.getElementById('avgScore').textContent = data.statistics.average_score;
            document.getElementById('yourScore').textContent = data.owner_score || '‚Äî';
            
            // Build followers table
            const container = document.getElementById('followersContainer');
            
            if (data.followers.length === 0) {
                container.innerHTML = `
                    <div class="empty-state">
                        <div class="empty-state-icon">üì≠</div>
                        <p>No verified followers yet</p>
                        <p style="font-size: 12px; margin-top: 10px;">Share your custom link to get followers!</p>
                    </div>
                `;
                return;
            }
            
            const tableHTML = `
                <table>
                    <thead>
                        <tr>
                            <th>Follower Address</th>
                            <th>Score</th>
                            <th>Platform</th>
                            <th>Verified At</th>
                            <th>Logins</th>
                        </tr>
                    </thead>
                    <tbody>
                        ${data.followers.map(f => `
                            <tr>
                                <td>${f.display_name || f.follower_address.substring(0, 10) + '...' + f.follower_address.substring(38)}</td>
                                <td><span class="score-badge">${f.resonance_score}/100</span></td>
                                <td><span class="platform-badge">${f.source_platform || 'unknown'}</span></td>
                                <td style="font-size: 12px;">${new Date(f.verified_at).toLocaleDateString()}</td>
                                <td>${f.login_count}</td>
                            </tr>
                        `).join('')}
                    </tbody>
                </table>
            `;
            
            container.innerHTML = tableHTML;
            
            // Platform distribution
            const platformHtml = Object.entries(data.statistics.by_platform)
                .map(([p, c]) => `<span class="platform-badge">${p}: ${c}</span>`)
                .join(' ');
            
            // Show dashboard
            document.getElementById('dashboardContent').style.display = 'block';
        }
        
        async function generateLink() {
            const owner = document.getElementById('ownerInput').value.toLowerCase().trim();
            const platform = document.getElementById('platformSelect').value;
            const linkDisplay = document.getElementById('linkDisplay');
            const linkInput = document.getElementById('generatedLink');
            
            if (!owner || !owner.startsWith('0x')) {
                alert('Please enter a valid wallet address first');
                return;
            }
            
            try {
                const response = await fetch(`${API_BASE}/admin/follower-link?owner=${owner}&source=${platform}`);
                const data = await response.json();
                
                if (!data.success) {
                    throw new Error(data.error);
                }
                
                linkInput.value = data.follower_link;
                linkDisplay.style.display = 'flex';
                
            } catch (error) {
                alert('Error generating link: ' + error.message);
            }
        }
        
        function copyToClipboard() {
            const linkInput = document.getElementById('generatedLink');
            linkInput.select();
            document.execCommand('copy');
            
            const btn = event.target;
            const originalText = btn.textContent;
            btn.textContent = '‚úì Copied!';
            setTimeout(() => btn.textContent = originalText, 2000);
        }
        
        // ===== NEW: MetaMask Integration =====
        // Store verified token in memory (not localStorage for security)
        let dashboardToken = null;
        let connectedWallet = null;
        
        async function connectMetaMask() {
            if (typeof window.ethereum === 'undefined') {
                alert('‚ùå MetaMask not installed!\n\nPlease install MetaMask extension:\nhttps://metamask.io');
                return;
            }
            
            try {
                console.log('ÔøΩ Step 1: Requesting MetaMask account access...');
                
                // Request account access
                const accounts = await window.ethereum.request({
                    method: 'eth_requestAccounts'
                });
                
                console.log('‚úÖ Account received:', accounts[0]);
                
                const walletAddress = accounts[0].toLowerCase();
                
                // üîê SECURITY: Step 2 - Get Challenge from Backend
                console.log('ÔøΩ Step 2: Requesting challenge from backend...');
                const challengeResponse = await fetch(`${API_BASE}/admin/challenge`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ owner: walletAddress })
                });
                
                const challengeData = await challengeResponse.json();
                if (!challengeData.success) {
                    throw new Error('Failed to get challenge: ' + challengeData.error);
                }
                
                const nonce = challengeData.nonce;
                console.log('‚úì Challenge received:', nonce);
                
                // üîê SECURITY: Step 3 - Sign Challenge with MetaMask
                console.log('üîê Step 3: Requesting MetaMask signature...');
                const messageToSign = `VEra-Resonance Dashboard Access\n\nNonce: ${nonce}\n\nBitte best√§tigen Sie in MetaMask um auf Ihr Dashboard zuzugreifen.`;
                
                const signature = await window.ethereum.request({
                    method: 'personal_sign',
                    params: [messageToSign, walletAddress]
                });
                
                console.log('‚úì Signature received:', signature.substring(0, 20) + '...');
                
                // üîê SECURITY: Step 4 - Verify Signature on Backend
                console.log('üîê Step 4: Verifying signature on backend...');
                const verifyResponse = await fetch(`${API_BASE}/admin/verify-signature`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ owner: walletAddress, signature, nonce })
                });
                
                const verifyData = await verifyResponse.json();
                if (!verifyData.success || !verifyData.verified) {
                    throw new Error('Signature verification failed: ' + verifyData.error);
                }
                
                console.log('‚úì Signature verified!');
                
                // üÜï Check if user exists in DB - if not, register via /api/verify for Auto-NFT-Mint
                console.log('üîç Checking if user exists...');
                try {
                    const userCheckResponse = await fetch(`${API_BASE}/api/user/${walletAddress}`);
                    const userData = await userCheckResponse.json();
                    
                    if (!userData || !userData.address) {
                        // User doesn't exist - register via /api/verify to trigger Auto-NFT-Mint
                        console.log('üÜï First-time user - registering and triggering Auto-NFT-Mint...');
                        
                        // Get new nonce for /api/verify
                        const nonceResponse2 = await fetch(`${API_BASE}/api/nonce`, {
                            method: 'POST',
                            headers: { 'Content-Type': 'application/json' },
                            body: JSON.stringify({ address: walletAddress })
                        });
                        const nonceData2 = await nonceResponse2.json();
                        
                        // Sign the standard login message
                        const loginMessage = nonceData2.message;
                        const loginSignature = await ethereum.request({
                            method: 'personal_sign',
                            params: [loginMessage, walletAddress]
                        });
                        
                        // Call /api/verify to create user and trigger Auto-NFT-Mint
                        const registerResponse = await fetch(`${API_BASE}/api/verify`, {
                            method: 'POST',
                            headers: { 'Content-Type': 'application/json' },
                            body: JSON.stringify({
                                address: walletAddress,
                                signature: loginSignature,
                                nonce: nonceData2.nonce,
                                display_name: "Dashboard User"
                            })
                        });
                        
                        const registerData = await registerResponse.json();
                        
                        if (registerData.is_human) {
                            console.log('‚úÖ User registered! Score:', registerData.resonance_score);
                            console.log('üé® Auto-NFT-Mint triggered!');
                            alert('üéâ Welcome! Your account has been created.\n\n' +
                                  'üìä Initial Resonance Score: ' + registerData.resonance_score + '\n' +
                                  'üé® Identity NFT is being minted...\n' +
                                  'Check status in Dashboard after it loads!');
                        } else {
                            console.warn('‚ö†Ô∏è User registration returned is_human=false');
                        }
                    } else {
                        console.log('‚úì User already exists with score:', userData.score);
                    }
                } catch (userCheckError) {
                    console.warn('‚ö†Ô∏è Could not check/register user:', userCheckError);
                    // Non-critical error - dashboard can still load
                }
                
                // ‚úÖ Store token for later use (no more MetaMask needed for loadDashboard)
                dashboardToken = signature;  // Use signature as token
                connectedWallet = walletAddress;
                
                // Auto-fill input
                document.getElementById('ownerInput').value = walletAddress;
                
                // Show wallet info
                const walletInfo = document.getElementById('walletInfo');
                walletInfo.style.display = 'block';
                document.getElementById('walletAddress').innerHTML = 
                    `‚úì Connected: <strong>${walletAddress.substring(0, 10)}...${walletAddress.substring(38)}</strong>`;
                
                // üéØ Do NOT auto-load dashboard - user must click "Load Dashboard" button
                // But now loadDashboard() will NOT need MetaMask confirmation
                
            } catch (error) {
                console.error('‚ùå Error in connectMetaMask:', error);
                
                if (error.code === 4001 || error.message.includes('rejected')) {
                    alert('‚ùå You rejected the MetaMask signature request');
                } else {
                    alert('‚ùå Error: ' + error.message);
                }
                
                dashboardToken = null;
                connectedWallet = null;
            }
        }
        
        function disconnectWallet() {
            document.getElementById('ownerInput').value = '';
            document.getElementById('walletInfo').style.display = 'none';
            document.getElementById('dashboardContent').style.display = 'none';
            document.getElementById('statusMessage').innerHTML = '';
            dashboardToken = null;
            connectedWallet = null;
        }
        
        // üî• Gasless NFT Mint using Alchemy Paymaster
        async function mintGasless() {
            if (!connectedWallet) {
                alert('‚ö†Ô∏è Please connect MetaMask first!');
                return;
            }
            
            const btn = document.getElementById('mintGaslessBtn');
            const statusDiv = document.getElementById('identityStatus');
            
            // Disable button during mint
            btn.disabled = true;
            btn.textContent = '‚è≥ Minting...';
            statusDiv.innerHTML = '‚è≥ Preparing gasless transaction...';
            
            try {
                // Import Paymaster module
                const { mintIdentityNFTGasless } = await import('../onchainkit-paymaster.js');
                
                console.log('üî• Starting gasless NFT mint for:', connectedWallet);
                statusDiv.innerHTML = '‚è≥ Sign transaction in MetaMask (NO GAS REQUIRED!)';
                
                // Execute gasless mint
                const txHash = await mintIdentityNFTGasless(connectedWallet);
                
                console.log('‚úÖ Gasless mint successful! TX:', txHash);
                
                // Update UI with success
                statusDiv.innerHTML = `
                    <div style="color: #11998e; font-weight: bold;">‚úÖ Minted!</div>
                    <a href="https://sepolia.basescan.org/tx/${txHash}" target="_blank" style="font-size: 12px; color: #667eea; text-decoration: underline;">
                        View Transaction ‚Üó
                    </a>
                    <div style="margin-top: 5px; padding: 5px 10px; background: linear-gradient(135deg, #11998e, #38ef7d); color: white; border-radius: 8px; font-size: 12px; display: inline-block;">
                        ‚ö° You paid $0.00 in gas fees!
                    </div>
                `;
                
                // Hide mint button (already minted)
                btn.style.display = 'none';
                
                // Show success alert
                alert('üéâ Identity NFT minted successfully!\n\n' +
                      '‚úÖ Transaction confirmed on BASE Sepolia\n' +
                      '‚ö° You paid $0.00 in gas fees (sponsored by Alchemy Paymaster)\n\n' +
                      `TX Hash: ${txHash.substring(0, 20)}...`);
                
                // Refresh dashboard to update NFT status
                console.log('üîÑ Refreshing dashboard to show updated NFT status...');
                await loadDashboard();
                
            } catch (error) {
                console.error('‚ùå Gasless mint failed:', error);
                
                // Reset UI
                statusDiv.innerHTML = '‚ùå Not Minted';
                btn.disabled = false;
                btn.textContent = '‚ö° Mint NFT (Gasless - $0.00)';
                
                // User-friendly error messages
                let errorMsg = 'Mint failed: ';
                if (error.message.includes('rejected')) {
                    errorMsg += 'You rejected the transaction';
                } else if (error.message.includes('already minted')) {
                    errorMsg += 'NFT already minted';
                    btn.style.display = 'none'; // Hide button
                } else if (error.message.includes('network')) {
                    errorMsg += 'Network error - please check your connection';
                } else {
                    errorMsg += error.message;
                }
                
                alert('‚ùå ' + errorMsg);
            }
        }
        
        // üö´ SECURITY: Do NOT listen to accountsChanged for auto-connection
        // Only disconnect when accounts are removed
        if (window.ethereum) {
            window.ethereum.on('accountsChanged', (accounts) => {
                if (accounts.length === 0) {
                    disconnectWallet();
                }
                // Do NOT call loadDashboard - user must click button
            });
        }
        
        // Load from URL if owner is in params
        window.addEventListener('DOMContentLoaded', () => {
            const params = new URLSearchParams(window.location.search);
            const owner = params.get('owner');
            if (owner) {
                document.getElementById('ownerInput').value = owner;
                // Do NOT auto-load - user must click button
            }
        });
    </script>
</body>
</html>

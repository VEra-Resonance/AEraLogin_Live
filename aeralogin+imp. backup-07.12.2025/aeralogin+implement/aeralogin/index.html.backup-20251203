    <script>
        const API_BASE = window.location.origin;
        const PLATFORM = "{{ platform_source }}";
        const SESSION_TIMEOUT_MINUTES = 2;  // 2 Minuten Session-Timeout
        const SESSION_TIMEOUT_MS = SESSION_TIMEOUT_MINUTES * 60 * 1000;  // In Millisekunden
        
        let connectBtn, verifyBtn, disconnectBtn, statusDiv, detailsDiv, debugInfo;
        let currentAddress = null;
        let currentToken = null;
        let sessionTimeoutId = null;
        
        /**
         * Startet den Session-Timeout-Timer neu
         * Nach 2 Minuten wird die Session automatisch beendet
         */
        function resetSessionTimeout() {
            if (sessionTimeoutId) {
                clearTimeout(sessionTimeoutId);
            }
            
            sessionTimeoutId = setTimeout(() => {
                log('‚è∞ SESSION TIMEOUT: 2 Minuten inaktiv');
                showStatus('‚è∞ Session abgelaufen - Automatisches Logout', 'info');
                disconnectWallet();
            }, SESSION_TIMEOUT_MS);
            
            log(`üïê Session-Timeout aktualisiert (${SESSION_TIMEOUT_MINUTES} min)`);
        }
        
        function log(msg) {
            console.log('[AEra]', msg);
            if (debugInfo) {
                debugInfo.classList.add('show');
                debugInfo.innerHTML = msg + '<br>' + debugInfo.innerHTML;
                if (debugInfo.children.length > 50) {
                    debugInfo.innerHTML = debugInfo.innerHTML.substring(0, debugInfo.innerHTML.lastIndexOf('<br>', debugInfo.innerHTML.length - 100));
                }
            }
        }
        
        function showStatus(message, type = 'info') {
            if (statusDiv) {
                statusDiv.textContent = message;
                statusDiv.className = `status ${type} show`;
            }
            log(`[${type}] ${message}`);
        }
        
        async function autoLoginWithToken() {
            const savedToken = localStorage.getItem('aera_token');
            const savedAddress = localStorage.getItem('aera_address');
            if (!savedToken || !savedAddress) {
                log('‚ÑπÔ∏è Kein gespeichertes Token gefunden');
                return false;
            }
            
            try {
                log('üîê Versuche Auto-Login mit echtem MetaMask-Check...');
                
                if (typeof window.ethereum === 'undefined') {
                    log('‚ùå MetaMask nicht installiert - Auto-Login blockiert');
                    localStorage.removeItem('aera_token');
                    localStorage.removeItem('aera_address');
                    return false;
                }
                
                let accounts = [];
                try {
                    // WICHTIG: eth_accounts LIEST nur die Accounts, √∂ffnet KEIN Popup!
                    accounts = await window.ethereum.request({ method: 'eth_accounts' });
                } catch (e) {
                    log('‚ùå MetaMask nicht aktiv: ' + e.message);
                    localStorage.removeItem('aera_token');
                    localStorage.removeItem('aera_address');
                    return false;
                }
                
                if (!accounts || accounts.length === 0) {
                    log('‚ÑπÔ∏è Keine Wallet-Konten verf√ºgbar - User muss manuell verbinden');
                    return false;
                }
                
                const currentWallet = accounts[0].toLowerCase();
                const savedWallet = savedAddress.toLowerCase();
                
                if (currentWallet !== savedWallet) {
                    log('‚ùå WALLET MISMATCH - Auto-Login blockiert');
                    localStorage.removeItem('aera_token');
                    localStorage.removeItem('aera_address');
                    return false;
                }
                
                log('‚úì MetaMask-Sicherheitspr√ºfung bestanden');
                
                // Nonce anfordern
                const nonceResponse = await fetch(`${API_BASE}/api/nonce`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ address: currentWallet }),
                    signal: AbortSignal.timeout(5000)
                });
                
                if (!nonceResponse.ok) throw new Error(`Nonce Request HTTP ${nonceResponse.status}`);
                
                const nonceData = await nonceResponse.json();
                if (!nonceData.success) throw new Error('Nonce generation failed');
                
                const messageToSign = nonceData.message;
                log('‚úì Nonce empfangen');
                
                // MetaMask Signatur
                let signature;
                try {
                    signature = await window.ethereum.request({
                        method: 'personal_sign',
                        params: [messageToSign, currentWallet]
                    });
                } catch (signError) {
                    log('‚ùå Signierung abgelehnt: ' + signError.message);
                    localStorage.removeItem('aera_token');
                    localStorage.removeItem('aera_address');
                    return false;
                }
                
                if (!signature) {
                    log('‚ùå Keine Signatur erhalten');
                    localStorage.removeItem('aera_token');
                    localStorage.removeItem('aera_address');
                    return false;
                }
                
                log('‚úì Signatur erhalten');
                
                // Token verifizieren
                const response = await fetch(`${API_BASE}/api/verify-token`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({
                        token: savedToken,
                        address: currentWallet,
                        nonce: nonceData.nonce,
                        message: messageToSign,
                        signature: signature
                    }),
                    signal: AbortSignal.timeout(5000)
                });
                
                const data = await response.json();
                
                if (!data.valid) {
                    log('‚ö†Ô∏è Token ung√ºltig oder abgelaufen');
                    localStorage.removeItem('aera_token');
                    localStorage.removeItem('aera_address');
                    return false;
                }
                
                currentAddress = data.address;
                currentToken = savedToken;
                
                log('‚úÖ Auto-Login erfolgreich!');
                showStatus(`‚úì Auto-Login erfolgreich - Session: ${SESSION_TIMEOUT_MINUTES} min`, 'success');
                
                document.getElementById('addressValue').textContent = currentAddress;
                document.getElementById('statusValue').textContent = '‚úÖ Auto-Login';
                document.getElementById('scoreValue').innerHTML = 
                    `<span class="score-badge">${data.resonance_score}/100</span>`;
                document.getElementById('loginCountValue').textContent = data.login_count;
                
                connectBtn.style.display = 'none';
                verifyBtn.style.display = 'none';
                disconnectBtn.style.display = 'block';
                detailsDiv.classList.add('show');
                
                // üîê WICHTIG: Starte Session-Timeout (2 Minuten)
                resetSessionTimeout();
                
                return true;
                
            } catch (error) {
                log('‚ùå Auto-Login: ' + error.message);
                localStorage.removeItem('aera_token');
                localStorage.removeItem('aera_address');
                return false;
            }
        }
        
        async function connectWallet() {
            try {
                log('‚è≥ Wallet-Verbindung startet...');
                
                if (typeof window.ethereum === 'undefined') {
                    log('‚ùå MetaMask nicht installiert');
                    showStatus('‚ùå MetaMask nicht installiert!', 'error');
                    return;
                }
                
                connectBtn.disabled = true;
                
                log('üîç MetaMask-Verbindung wird aufgebaut...');
                showStatus('‚è≥ Warte auf MetaMask...', 'info');
                
                let accounts = [];
                try {
                    accounts = await window.ethereum.request({ 
                        method: 'eth_requestAccounts'
                    });
                } catch (popupError) {
                    log('‚ùå MetaMask Popup abgelehnt: ' + popupError.message);
                    showStatus('‚ùå MetaMask nicht verf√ºgbar!', 'error');
                    connectBtn.disabled = false;
                    return;
                }
                
                if (!accounts || accounts.length === 0) {
                    log('‚ùå Keine Wallet in MetaMask');
                    showStatus('‚ùå Keine Wallet gefunden!', 'error');
                    connectBtn.disabled = false;
                    return;
                }
                
                currentAddress = accounts[0];
                log('‚úÖ MetaMask verbunden: ' + currentAddress);
                
                showStatus(`‚úì Wallet verbunden. Jetzt "Verifizieren" klicken!`, 'success');
                
                document.getElementById('addressValue').textContent = currentAddress;
                document.getElementById('statusValue').textContent = 'üîó Verbunden';
                
                // Show name input field
                document.getElementById('nameInputSection').style.display = 'block';
                
                connectBtn.style.display = 'none';
                verifyBtn.style.display = 'block';
                verifyBtn.disabled = false;
                disconnectBtn.style.display = 'block';
                detailsDiv.classList.add('show');
                
            } catch (error) {
                log('‚ùå connectWallet: ' + error.message);
                showStatus('‚ùå Fehler: ' + error.message, 'error');
                connectBtn.disabled = false;
            }
        }
        
        async function verifyWallet() {
            if (!currentAddress) {
                log('‚ùå Keine Wallet verbunden');
                return;
            }
            
            // Check if name is provided
            const nameInput = document.getElementById('nameInput').value.trim();
            if (!nameInput) {
                log('‚ùå Bitte gib deinen Namen ein!');
                showStatus('‚ùå Bitte gib deinen Namen ein!', 'error');
                document.getElementById('nameInput').focus();
                document.getElementById('nameInput').style.borderColor = '#ff6b6b';
                return;
            }
            
            try {
                if (typeof window.ethereum === 'undefined') {
                    log('‚ùå MetaMask nicht verf√ºgbar');
                    showStatus('‚ùå MetaMask nicht verf√ºgbar!', 'error');
                    return;
                }
                
                log('üîê Sicherheitspr√ºfung...');
                
                let accounts = [];
                try {
                    accounts = await window.ethereum.request({ method: 'eth_requestAccounts' });
                } catch (e) {
                    log('‚ùå MetaMask nicht aktiv: ' + e.message);
                    showStatus('‚ùå MetaMask nicht aktiv!', 'error');
                    return;
                }
                
                if (!accounts || accounts.length === 0) {
                    log('‚ùå Keine Wallet verf√ºgbar');
                    showStatus('‚ùå MetaMask nicht aktiv!', 'error');
                    return;
                }
                
                if (accounts[0].toLowerCase() !== currentAddress.toLowerCase()) {
                    log('‚ùå Wallet gewechselt');
                    showStatus('‚ùå Wallet wurde gewechselt!', 'error');
                    return;
                }
                
                log('‚úì Sicherheitspr√ºfung bestanden');
                verifyBtn.disabled = true;
                showStatus('‚è≥ Verifizierung l√§uft...', 'info');
                
                // Nonce anfordern
                const nonceResponse = await fetch(`${API_BASE}/api/nonce`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ address: currentAddress }),
                    signal: AbortSignal.timeout(5000)
                });
                
                if (!nonceResponse.ok) throw new Error(`Nonce Request HTTP ${nonceResponse.status}`);
                
                const nonceData = await nonceResponse.json();
                if (!nonceData.success) throw new Error('Nonce generation failed');
                
                const messageToSign = nonceData.message;
                log('‚úì Nonce empfangen');
                
                // MetaMask Signatur
                let signature;
                try {
                    signature = await window.ethereum.request({
                        method: 'personal_sign',
                        params: [messageToSign, currentAddress]
                    });
                } catch (signError) {
                    log('‚ùå Signierung abgelehnt: ' + signError.message);
                    showStatus('‚ùå Signierung abgelehnt!', 'error');
                    verifyBtn.disabled = false;
                    return;
                }
                
                if (!signature) {
                    log('‚ùå Keine Signatur erhalten');
                    showStatus('‚ùå Keine Signatur!', 'error');
                    verifyBtn.disabled = false;
                    return;
                }
                
                log('‚úì Signatur erhalten');
                
                // Get owner parameter from URL if present
                const urlParams = new URLSearchParams(window.location.search);
                const ownerParam = urlParams.get('owner');
                
                // Verifizieren
                const verifyPayload = {
                    address: currentAddress,
                    nonce: nonceData.nonce,
                    message: messageToSign,
                    signature: signature,
                    display_name: nameInput  // NEW: Include user-provided name
                };
                
                // Add owner if provided (for follower tracking)
                if (ownerParam) {
                    verifyPayload.owner = ownerParam;
                    log(`üë• Owner Account: ${ownerParam.substring(0, 10)}...`);
                }
                
                // Add source platform from URL or use PLATFORM constant
                const sourceParam = new URLSearchParams(window.location.search).get('source');
                if (sourceParam) {
                    verifyPayload.source = sourceParam;
                    log(`üì± Platform Source: ${sourceParam}`);
                }
                
                const response = await fetch(`${API_BASE}/api/verify`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(verifyPayload),
                    signal: AbortSignal.timeout(5000)
                });
                
                if (!response.ok) throw new Error(`HTTP ${response.status}`);
                
                const data = await response.json();
                
                if (data.error) throw new Error(data.error);
                if (!data.is_human) throw new Error('Signaturverifikation fehlgeschlagen');
                
                log('‚úÖ Verifizierung erfolgreich!');
                
                document.getElementById('scoreValue').innerHTML = 
                    `<span class="score-badge">${data.resonance_score}/100</span>`;
                document.getElementById('statusValue').textContent = '‚úÖ Verifiziert';
                document.getElementById('loginCountValue').textContent = data.login_count;
                
                showStatus(`‚úì Score: ${data.resonance_score}/100 - Session: ${SESSION_TIMEOUT_MINUTES} min`, 'success');
                verifyBtn.textContent = '‚úì Verifiziert';
                verifyBtn.disabled = true;
                
                // üîê WICHTIG: Starte Session-Timeout (2 Minuten)
                resetSessionTimeout();
                
                // Enable follow confirmation button if owner is present
                if (ownerParam) {
                    const confirmBtn = document.getElementById('confirmFollowBtn');
                    confirmBtn.style.display = 'block';
                    confirmBtn.disabled = false;
                    log('‚úì Follow-Best√§tigung verf√ºgbar');
                }
                
                if (data.token) {
                    currentToken = data.token;
                    localStorage.setItem('aera_token', data.token);
                    localStorage.setItem('aera_address', currentAddress);
                    log('üíæ Token gespeichert');
                }
                
            } catch (error) {
                log('‚ùå Fehler: ' + error.message);
                showStatus('Fehler: ' + error.message, 'error');
                verifyBtn.textContent = '‚úì Verifizieren';
            } finally {
                verifyBtn.disabled = false;
            }
        }
        
        function disconnectWallet() {
            // üîê Stoppe Session-Timeout
            if (sessionTimeoutId) {
                clearTimeout(sessionTimeoutId);
                sessionTimeoutId = null;
            }
            
            currentAddress = null;
            currentToken = null;
            
            localStorage.removeItem('aera_token');
            localStorage.removeItem('aera_address');
            
            document.getElementById('addressValue').textContent = '‚Äî';
            document.getElementById('statusValue').textContent = '‚Äî';
            document.getElementById('scoreValue').textContent = '‚Äî';
            document.getElementById('loginCountValue').textContent = '‚Äî';
            
            // Hide name input
            document.getElementById('nameInputSection').style.display = 'none';
            document.getElementById('nameInput').value = '';
            document.getElementById('nameInput').style.borderColor = '#e0e0e0';
            
            connectBtn.style.display = 'block';
            verifyBtn.style.display = 'none';
            disconnectBtn.style.display = 'none';
            verifyBtn.textContent = '‚úì Verifizieren';
            verifyBtn.disabled = false;
            detailsDiv.classList.remove('show');
            
            showStatus('‚úì Wallet getrennt', 'info');
            log('üóëÔ∏è Session gel√∂scht');
        }
        
        async function confirmFollow() {
            if (!currentAddress) {
                log('‚ùå Keine Wallet verbunden');
                return;
            }
            
            const urlParams = new URLSearchParams(window.location.search);
            const ownerParam = urlParams.get('owner');
            
            if (!ownerParam) {
                log('‚ùå Kein Owner in URL');
                return;
            }
            
            const confirmBtn = document.getElementById('confirmFollowBtn');
            confirmBtn.disabled = true;
            showStatus('‚è≥ Follow-Anfrage wird best√§tigt...', 'info');
            
            try {
                const response = await fetch(`${API_BASE}/admin/confirm-follower`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({
                        owner: ownerParam,
                        follower: currentAddress
                    }),
                    signal: AbortSignal.timeout(5000)
                });
                
                if (!response.ok) throw new Error(`HTTP ${response.status}`);
                
                const data = await response.json();
                
                if (!data.success) throw new Error(data.error || 'Follow confirmation failed');
                
                log('‚úÖ Follow-Anfrage best√§tigt!');
                showStatus('‚úÖ Follow-Anfrage best√§tigt! üéâ', 'success');
                confirmBtn.textContent = '‚úì Best√§tigt';
                confirmBtn.disabled = true;
                
            } catch (error) {
                log('‚ùå Fehler: ' + error.message);
                showStatus('‚ùå Fehler: ' + error.message, 'error');
                confirmBtn.disabled = false;
            }
        }
        
        document.addEventListener('DOMContentLoaded', function() {
            try {
                connectBtn = document.getElementById('connectBtn');
                verifyBtn = document.getElementById('verifyBtn');
                disconnectBtn = document.getElementById('disconnectBtn');
                statusDiv = document.getElementById('status');
                detailsDiv = document.getElementById('details');
                debugInfo = document.getElementById('debugInfo');
                
                log(`=== AEra Login (${PLATFORM}) ===`);
                log('API: ' + API_BASE);
                log('Platform: {{ platform_name }}');
                
                connectBtn.addEventListener('click', connectWallet);
                verifyBtn.addEventListener('click', verifyWallet);
                disconnectBtn.addEventListener('click', disconnectWallet);
                
                // Add event listener for confirm follow button
                const confirmFollowBtn = document.getElementById('confirmFollowBtn');
                if (confirmFollowBtn) {
                    confirmFollowBtn.addEventListener('click', confirmFollow);
                }
                
                // Auto-Login versuchen (ABER NICHT bei Follower-Links!)
                (async () => {
                    const urlParams = new URLSearchParams(window.location.search);
                    const ownerParam = urlParams.get('owner');
                    
                    // Bei Follower-Links: Kein Auto-Login, immer frischer Start
                    if (ownerParam) {
                        log('üìã Follower-Link erkannt - kein Auto-Login, frischer Start');
                        // Clear any old tokens for clean experience
                        localStorage.removeItem('aera_token');
                        localStorage.removeItem('aera_address');
                        return;
                    }
                    
                    if (typeof window.ethereum !== 'undefined') {
                        log('MetaMask installiert - versuche Auto-Login...');
                        setTimeout(async () => {
                            try {
                                await autoLoginWithToken();
                            } catch (error) {
                                log('‚ùå Auto-Login: ' + error.message);
                            }
                        }, 300);
                    } else {
                        log('‚ö†Ô∏è MetaMask nicht installiert');
                    }
                })();
            } catch (error) {
                console.error('INIT ERROR:', error);
                log('‚ùå INIT FEHLER: ' + error.message);
            }
        });
    </script>
</body>
</html>
